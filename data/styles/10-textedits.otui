TextEdit < UITextEdit
  font: verdana-11px-antialised
  padding-left: 2
  color: white
  height: 16
  opacity: 1
  image-source: /images/ui/textedit
  image-border: 1
  selection-background-color: #cccccc
  $disabled:
    color: #27272788
    opacity: 0.5

PasswordTextEdit < TextEdit
  text-hidden: true
  font: cipsoftFont
  padding-top: 3

MultilineTextEdit < TextEdit
  multiline: true
